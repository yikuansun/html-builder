{
    "name": "my-html-app",
    "productName": "{app_name}",
    "description": "An app created with HTML Builder",
    "author": {
        "name": "HTML Builder",
        "url": "https://github.com/yikuansun/html-builder"
    },
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build-linux": "electron-builder --linux",
        "build-darwin": "electron-builder --mac",
        "build-win32": "electron-builder --windows"
    },
    "devDependencies": {
        "electron": "^17.1.0",
        "electron-builder": "^22.14.5"
    },
    "build": {
        "appId": "com.electron.htmlapp",
        "directories": {
            "buildResources": "htmlbuilder-buildresources"
        },
        "mac": {
            "target": "zip"
        },
        "linux": {
            "icon": "icon.png"
        }
    }
}