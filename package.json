{
    "name": "html-builder",
    "productName": "HTML Builder",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build-linux": "electron-packager . --icon icons/icon.png --platform linux",
        "build-darwin": "electron-packager . --icon icons/icon.icns --platform darwin",
        "build-win32": "electron-packager . --icon icons/icon.ico --platform win32"
    },
    "devDependencies": {
        "electron": "^13.1.1",
        "electron-packager": "^15.2.0"
    },
    "dependencies": {
        "adm-zip": "^0.5.3",
        "fix-path": "^3.0.0",
        "png2icons": "^2.0.1"
    }
}
